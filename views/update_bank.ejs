<!-- Include header -->
<%- include('include/_header') %>
<!-- /include header -->

    <!-- Main Site -->

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex-justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>All Banks </a>
                </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">Edit a bank</h2>
                <span class="text-light">Use the below form to update a bank</span>
            </div>

            <!-- form handling -->
            <form id="update_bank" method="POST">
                <div class="new_bank">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= bank._id%>">
                        <input type="text" name="name" required value="<%= bank.name%>" placeholder="Bank of America">
                    </div>
                    
                    <div class="form-group">
                        <label for="interestRate" class="text-light">Interest rate</label>
                        <input type="hidden" name="interestRate" value="<%= bank.interestRate%>">
                        <input type="text" name="interestRate" required pattern="[0-9]+([\.,][0-9]+)?" value="<%= bank.interestRate%>" placeholder="25%">
                    </div>
                    
                    <div class="form-group">
                        <label for="maxLoan" class="text-light">Maximum loan</label>
                        <input type="hidden" name="maxLoan" value="<%= bank.maxLoan%>">
                        <input type="text" name="maxLoan" required pattern="[0-9]+" value="<%= bank.maxLoan%>" placeholder="250 000">
                    </div>
                    
                    <div class="form-group">
                        <label for="minPayment" class="text-light">Minimum down payment</label>
                        <input type="hidden" name="minPayment" value="<%= bank.minPayment%>">
                        <input type="text" name="minPayment" required pattern="[0-9]+" value="<%= bank.minPayment%>" placeholder="30 000">
                    </div>
            
                    <div class="form-group">
                        <label for="loanTerm" class="text-light">Loan term</label>
                        <input type="hidden" name="loanTerm" value="<%= bank.loanTerm%>">
                        <input type="text" name="loanTerm"  required pattern="[0-9]+" value="<%= bank.loanTerm%>" placeholder="36">
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
            
        </div>
    </main>

<!-- /Main Site -->



<!-- Include header -->
<%- include('include/_footer') %>
<!-- /include header -->